# AWS Cognito Configuration (REQUIRED for authentication)
# Add these variables to your .env.local file

# AWS Region for Cognito (should match your S3 region)
NEXT_PUBLIC_AWS_REGION=us-east-1

# Your Cognito User Pool ID (get this from AWS Console → Cognito → User Pools)
# Format: us-east-1_xxxxxxxxx
NEXT_PUBLIC_USER_POOL_ID=your-user-pool-id-here

# Your Cognito App Client ID (get this from AWS Console → Cognito → User Pools → App clients)
# Format: xxxxxxxxxxxxxxxxxxxxxxxxxx
NEXT_PUBLIC_USER_POOL_CLIENT_ID=your-user-pool-client-id-here

# Cookie domain for authentication (use localhost for development)
NEXT_PUBLIC_COOKIE_DOMAIN=localhost

# Keep your existing S3 configuration
AWS_ACCESS_KEY_ID=your-s3-access-key
AWS_SECRET_ACCESS_KEY=your-s3-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name 